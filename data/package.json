{
  "scripts": {
    "lint": "npx prettier .",
    "lint:fix": "npm run lint -- --write",
    "generate-types": "mkdir -p ./types && find ./schemas -type f -name \"*.schema.json\" -exec sh -c 'base=$(basename \"{}\" .schema.json | tr \"-\" \"\\n\" | awk \"{print (NR==1 ? \\$0 : toupper(substr(\\$0,1,1)) tolower(substr(\\$0,2)))}\" | tr -d \"\\n\"); npx quicktype -s schema \"{}\" -o \"./types/${base}.ts\" --lang typescript --just-types' \\;",
    "validate": "ajv validate -c ajv-formats --spec=draft2020",
    "validate:all": "npm run validate:calculator-groups && npm run validate:calculators && npm run validate:candidates-answers && npm run validate:candidates && npm run validate:elections && npm run validate:organizations && npm run validate:persons && npm run validate:questions",
    "validate:calculator-groups": "npm run validate -- -r \"./!(calculator-group).schema.json\" -s calculator-group.schema.json -d \"../instance/**/calculator-group.json\"",
    "validate:calculators": "npm run validate -- -r \"./!(calculator).schema.json\" -s calculator.schema.json -d \"../instance/**/calculator.json\"",
    "validate:candidates-answers": "npm run validate -- -r \"./!(candidates-answers).schema.json\" -s candidates-answers.schema.json -d \"../instance/**/candidates-answers.json\"",
    "validate:candidates": "npm run validate -- -r \"./!(candidates).schema.json\" -s candidates.schema.json -d \"../instance/**/candidates.json\"",
    "validate:elections": "npm run validate -- -r \"./!(election).schema.json\" -s election.schema.json -d \"../instance/**/election.json\"",
    "validate:organizations": "npm run validate -- -r \"./!(organizations).schema.json\" -s organizations.schema.json -d \"../instance/**/organizations.json\"",
    "validate:persons": "npm run validate -- -r \"./!(persons).schema.json\" -s persons.schema.json -d \"../instance/**/persons.json\"",
    "validate:questions": "npm run validate -- -r \"./!(questions).schema.json\" -s questions.schema.json -d \"../instance/**/questions.json\"",
    "validate:example:all": "npm run validate:example:calculator-groups && npm run validate:example:calculators && npm run validate:example:candidates-answers && npm run validate:example:candidates && npm run validate:example:elections && npm run validate:example:organizations && npm run validate:example:persons && npm run validate:example:questions",
    "validate:example:calculator-groups": "npm run validate -- -r \"./!(calculator-group).schema.json\" -s calculator-group.schema.json -d \"../example/**/calculator-group.json\"",
    "validate:example:calculators": "npm run validate -- -r \"./!(calculator).schema.json\" -s calculator.schema.json -d \"../example/**/calculator.json\"",
    "validate:example:candidates-answers": "npm run validate -- -r \"./!(candidates-answers).schema.json\" -s candidates-answers.schema.json -d \"../example/**/candidates-answers.json\"",
    "validate:example:candidates": "npm run validate -- -r \"./!(candidates).schema.json\" -s candidates.schema.json -d \"../example/**/candidates.json\"",
    "validate:example:elections": "npm run validate -- -r \"./!(election).schema.json\" -s election.schema.json -d \"../example/**/election.json\"",
    "validate:example:organizations": "npm run validate -- -r \"./!(organizations).schema.json\" -s organizations.schema.json -d \"../example/**/organizations.json\"",
    "validate:example:persons": "npm run validate -- -r \"./!(persons).schema.json\" -s persons.schema.json -d \"../example/**/persons.json\"",
    "validate:example:questions": "npm run validate -- -r \"./!(questions).schema.json\" -s questions.schema.json -d \"../example/**/questions.json\""
  },
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1",
    "prettier": "^3.0.1",
    "quicktype": "^23.0.71"
  }
}
