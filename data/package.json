{
  "scripts": {
    "lint": "npx prettier .",
    "lint:fix": "npm run lint -- --write",
    "validate": "ajv validate -c ajv-formats --spec=draft2020",
    "validate:example": "npm run validate:example:calculator-groups && npm run validate:example:calculators && npm run validate:example:candidates-answers && npm run validate:example:candidates && npm run validate:example:elections && npm run validate:example:organizations && npm run validate:example:persons && npm run validate:example:questions",
    "validate:example:calculator-groups": "npm run validate -- -r \"./!(calculator-group).schema.json\" -s calculator-group.schema.json -d \"../example/volebnikalkulacka.cz/**/calculator-group.json\"",
    "validate:example:calculators": "npm run validate -- -r \"./!(calculator).schema.json\" -s calculator.schema.json -d \"../example/volebnikalkulacka.cz/**/calculator.json\"",
    "validate:example:candidates-answers": "npm run validate -- -r \"./!(candidates-answers).schema.json\" -s candidates-answers.schema.json -d \"../example/volebnikalkulacka.cz/**/candidates-answers.json\"",
    "validate:example:candidates": "npm run validate -- -r \"./!(candidates).schema.json\" -s candidates.schema.json -d \"../example/volebnikalkulacka.cz/**/candidates.json\"",
    "validate:example:elections": "npm run validate -- -r \"./!(election).schema.json\" -s election.schema.json -d \"../example/volebnikalkulacka.cz/**/election.json\"",
    "validate:example:organizations": "npm run validate -- -r \"./!(organizations).schema.json\" -s organizations.schema.json -d \"../example/volebnikalkulacka.cz/**/organizations.json\"",
    "validate:example:persons": "npm run validate -- -r \"./!(persons).schema.json\" -s persons.schema.json -d \"../example/volebnikalkulacka.cz/**/persons.json\"",
    "validate:example:questions": "npm run validate -- -r \"./!(questions).schema.json\" -s questions.schema.json -d \"../example/volebnikalkulacka.cz/**/questions.json\""
  },
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1",
    "prettier": "^3.0.1",
    "quicktype": "^23.0.71"
  }
}
