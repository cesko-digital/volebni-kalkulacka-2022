{
  "$id": "https://kalkulacka.ceskodigital.net/schemas/contact.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A representation of contact",
  "type": "object",
  "required": [],
  "properties": {
    "webs": {
      "type": "array",
      "description": "Websites",
      "items": {
        "object": "string",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL"
          },
          "label": {
            "type": "string",
            "description": "Label for the URL"
          }
        },
        "required": ["url"]
      }
    },
    "emails": {
      "type": "array",
      "description": "Emails",
      "items": {
        "object": "string",
        "properties": {
          "url": {
            "type": "string",
            "description": "email"
          },
          "label": {
            "type": "string",
            "description": "Label for the email"
          }
        },
        "required": ["url"]
      }
    },
    "twitter": {
      "type": "string",
      "description": "Twitter handle"
    },
    "instagram": {
      "type": "string",
      "description": "Instagram handle"
    },
    "facebook": {
      "type": "string",
      "description": "Facebook handle"
    },
    "tiktok": {
      "type": "string",
      "description": "Tiktok handle"
    }
  }
}
