{
  "$id": "https://kalkulacka.ceskodigital.net/schemas/candidate-answers.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A representation of answers for given candidate to questions",
  "type": "object",
  "required": ["id", "candidate_id", "questions"],
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID"
    },
    "candidate_id": {
      "type": "string",
      "description": "Candidate's UUID"
    },
    "questions": {
      "type": "array",
      "description": "Candidates' answers on questions",
      "items": {
        "type": "object",
        "properties": {
          "question_id": {
            "type": "string",
            "description": "Question's UUID"
          },
          "question": {
            "$ref": "https://kalkulacka.ceskodigital.net/schemas/question.schema.json",
            "description": "Question itself. If it's missing use question_id to lookup the question."
          },
          "answer": {
            "type": "string",
            "description": "Answer on given question",
            "enum": ["yes", "no"]
          },
          "comment": {
            "type": "string",
            "description": "Candidate's comment related to their answer."
          }
        }
      }
    }
  }
}
