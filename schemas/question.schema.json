{
  "$id": "https://kalkulacka.ceskodigital.net/schemas/question.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of single question",
  "type": "object",
  "required": ["id", "name", "title", "gist", "detail"],
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID"
    },
    "name": {
      "type": "string",
      "description": "UUID"
    },
    "title": {
      "type": "string",
      "description": "Text of the question"
    },
    "gist": {
      "type": "string",
      "description": "Shorter explanation of the question"
    },
    "detail": {
      "type": "string",
      "description": "Longer explanation of the question"
    },
    "tags": {
      "type": "array",
      "description": "Tags for the question",
      "items": {
        "type": "string"
      }
    }
  }
}
