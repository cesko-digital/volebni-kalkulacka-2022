{
  "$id": "https://kalkulacka.ceskodigital.net/schemas/question.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A representation of single question",
  "type": "object",
  "required": [
    "id",
    "text",
    "explanation",
    "yes_argument",
    "no_argument",
    "tags"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID"
    },
    "text": {
      "type": "string",
      "description": "Text of the question"
    },
    "explanation": {
      "type": "string",
      "description": "Longer explanation of the question"
    },
    "yes_argument": {
      "type": "string",
      "description": "Arguments for yes"
    },
    "no_argument": {
      "type": "string",
      "description": "Arguments for no"
    },
    "tags": {
      "type": "array",
      "description": "Tags for the question",
      "items": {
        "type": "string"
      }
    }
  }
}
