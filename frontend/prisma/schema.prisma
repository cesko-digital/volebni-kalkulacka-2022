generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum AnswersSource {
  WEB
  EMBED
}

model Answers {
  id             String       @id @default(cuid())
  updateToken    String       @default(cuid())
  createdAt      DateTime     @default(now())
  source         AnswersSource @default(WEB)
  embedName String?
  calculatorId   String
  value          Json
}
